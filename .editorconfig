root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.md]
indent_size = unset

[tests/ui/__snapshots__/*]
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
